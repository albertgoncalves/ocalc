#!/usr/bin/env bash

if [ "$(uname -s)" = "Darwin" ]; then
    alias ls='ls --color=auto'
    alias ll='ls -l'
else
    alias open="xdg-open"
fi

export WD
WD=$(pwd)

for x in calc show lang; do
    for y in bin build; do
        if [ ! -d "$WD/$x/$y" ]; then
            mkdir "$WD/$x/$y"
        fi
    done
done

indent () {
    if [ -d "$1" ]; then
        if ls "$1"/*.ml >/dev/null 2>&1; then
            for x in "$1"/*.ml; do
                echo "$x"
                ocp-indent -i "$x"
            done
        fi
    fi
}

export -f indent
